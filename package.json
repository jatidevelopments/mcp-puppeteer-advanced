    "watch": "tsc --watch",
    "dev": "nodemon --watch src --ext ts --exec 'npm run build'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.0.1",
    "puppeteer": "^23.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
